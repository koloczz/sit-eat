<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sit & Eat</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
	<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' />
    <link rel="icon" href="~/img/logoV3.png" />
    <script src="~/js/main.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body onscroll="stickToTop()" onload="randomCarpetBG()">
    <header>
            <div class="banner-container">
                <nav class="navbar">
                    <ul class="navbar-nav">
                        <li class="nav-brand">
                            <a id="no-hover" class="nav-link brand-name" asp-controller="Home" asp-action="Index">Sit&nbsp;&&nbsp;Eat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" onclick="changeTheme()">Toggle theme</a>
                        </li>
                    </ul>
                </nav>           
                <nav class="navbar2">
                    <ul class="navbar-nav2">
                        @RenderSection("Navbar2", required: false)
                    </ul>
                </nav>
            </div>
        </header>
    <main>
            @RenderBody()
    </main>

    <footer>
            <div class="footer-item">
                <p>Created by Us &copy; 2021</p>
                <img class=".social-media-icons" height="60px" src="~/img/social-media.png" alt="social-media">
                <p>For inquiries, please contact: <br> <a href="mailto:dominik.starzyk@codecool.com">Dominik</a></p>
            </div>
        </footer>
        @RenderSection("floatButton", required: false)

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
