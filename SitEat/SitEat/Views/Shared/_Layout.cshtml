<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sit & Eat</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
	<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' />
    <link rel="icon" href="~/img/logoV3.png" />
    <script src="~/js/main.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body onscroll="stickToTop()">
    <header>
            <div class="banner-container">
                <nav class="navbar">
                    <ul class="navbar-nav">
                        <li class="nav-brand">
                            <a id="no-hover" class="nav-link brand-name" asp-controller="Home" asp-action="Index">Sit&nbsp;&&nbsp;Eat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" onclick="changeTheme()">Toggle theme</a>
                        </li>
                    </ul>
                </nav>           
                <nav class="navbar2">
                    <ul class="navbar-nav2">
                        @RenderSection("Navbar2", required: false)
                    </ul>
                </nav>
            </div>
        </header>
    <main>
            @RenderBody()
    </main>

    <footer>
            <div class="footer-item">
                <p>Created by Us &copy; 2021</p>
                <img class=".social-media-icons" height="60px" src="~/img/social-media.png" alt="social-media">
                <p>For inquiries, please contact: <br> <a href="mailto:dominik.starzyk@codecool.com">Dominik</a></p>
            </div>
        </footer>
        <form>
        <div id="float">
            
                <p>
                &#x1F553;
                <input type="number" class="input" id="textInputHour" name="filterHour" value="12">
                <input class="slidecontainer" type="range" min="0" max="23" value="12" class="slider" id="myRange" onchange="updateTextInput(this.value)">
                
            </p>
            <p>
                &#x1f464
                <input type="number" class="input" id="textInputPerson" name="filterPeople" value="1">
                <input class="slidecontainer" type="range" min="1" max="16" value="1" class="slider" id="myRange" onchange="updateTextInput2(this.value)">            
            </p>
            <p>               
                <i class="fa fa-calendar" style="font-size:24px"></i>
                <input id="datefield" type="date" name="filterDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" min="@DateTime.Today.ToString("yyyy-MM-dd")" max="@DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd")">
            </p>
            
        </div>
        </form>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
